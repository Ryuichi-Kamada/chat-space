.side-bar
  .side-bar_user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        .top-items___edit
          = link_to new_group_path(current_user), class: "icons__btn" do
            = icon('far','edit', class:"top-items__icons--btn")
        .top-items___cog
          = link_to edit_user_path(current_user) do
            = icon('fas','cog', class:"top-items__icons--btn")
  .side-bar_group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__new-message
            まだメッセージはありません
